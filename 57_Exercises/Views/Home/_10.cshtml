
@using _57_Exercises.Controllers

@model _57_Exercises.ViewModels.Ex10ViewModel

@{
    ViewBag.Title = "10";
}

@using (Ajax.BeginForm(actionName: nameof(HomeController._10), ajaxOptions: new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "result", InsertionMode = InsertionMode.Replace }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="form-inline">
        <div class="form-group">
            @Html.Label("Item 1 units")<br />
            @Html.EditorFor(m=>m.Item1Quantity, new { htmlAttributes = new { @class = "form-control", autofocus = "", required = "required" } })
        </div>
        <div class="form-group">
            @Html.Label("Item 1 price/unit")<br />
            @Html.EditorFor(m => m.Item1Price, new { htmlAttributes = new { @class = "form-control", required = "required", @name = "vm.Item1.Value" } })
        </div>
    </div>

    <div class="form-inline">
        <div class="form-group">
            @Html.Label("Item 2 units")<br />
            @Html.EditorFor(m => m.Item2Quantity, new { htmlAttributes = new { @class = "form-control", autofocus = "", required = "required" } })
        </div>
        <div class="form-group">
            @Html.Label("Item 2 price/unit")<br />
            @Html.EditorFor(m => m.Item2Price, new { htmlAttributes = new { @class = "form-control", required = "required", @name = "vm.Item1.Value" } })
        </div>
    </div>

    <div class="form-inline">
        <div class="form-group">
            @Html.Label("Item 3 units")<br />
            @Html.EditorFor(m => m.Item3Quantity, new { htmlAttributes = new { @class = "form-control", autofocus = "", required = "required" } })
        </div>
        <div class="form-group">
            @Html.Label("Item 3 price/unit")<br />
            @Html.EditorFor(m => m.Item3Price, new { htmlAttributes = new { @class = "form-control", required = "required", @name = "vm.Item1.Value" } })
        </div>
    </div>

    <button type="submit" id="btnSubmit" class="btn btn-default">Ok</button>
}

<p>
    <div id="result"></div>
    <h2 class="text-primary text-warning" id="error"></h2>
</p>