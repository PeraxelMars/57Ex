@using _57_Exercises.Controllers
@{
    ViewBag.Title = "1";
}

@using (Ajax.BeginForm(actionName: nameof(HomeController._1), ajaxOptions: new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "result" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <form class="form-inline">
        <div class="form-group">
            <label for="name">What is your name?</label>
            <input type="text" class="form-control" id="name" required="required" name="name" placeholder="Jane Doe">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </form>

    <h2 class="text-primary " id="result"></h2>
}
