@using _57_Exercises.Controllers

@model _57_Exercises.Models.TheModel

@{
    ViewBag.Title = "2";
}

@using (Ajax.BeginForm(actionName: nameof(HomeController._2), ajaxOptions: new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "result" }))
{
    @Html.AntiForgeryToken()

    <div class="form-inline">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Value, "What is the input string?")
            @Html.EditorFor(m => m.Value, new { htmlAttributes = new { @class = "form-control" } })
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
}

<h2 class="text-primary " id="result"></h2>
