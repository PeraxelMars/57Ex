@using _57_Exercises.Controllers

@{
    ViewBag.Title = "8";
}

@using (Ajax.BeginForm(actionName: nameof(HomeController._8), ajaxOptions: new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "result", InsertionMode = InsertionMode.Replace }))
{
    @Html.AntiForgeryToken()

    <div class="form-inline">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("people", "People? ")
            @Html.TextBox("people", "", new { @class = "form-control", autofocus = "", required = "required" })
        </div>
    </div><br />
    <div class="form-inline">
        <div class="form-group">
            @Html.Label("pizzas", "Pizzas? ")
            @Html.TextBox("pizzas", "", new { @class = "form-control", required = "required" })
        </div>
    </div><br />
    <div class="form-inline">
        <div class="form-group">
            @Html.Label("slicesPerPizza", "Slices/pizza? ")
            @Html.TextBox("slicesPerPizza", "", new { @class = "form-control", required = "required" })
        </div>
    </div>

    <button type="submit" id="btnSubmit" class="btn btn-default">Ok</button>
}

<p>
    <div id="result"></div>
    <h2 class="text-primary text-warning" id="error"></h2>
</p>

