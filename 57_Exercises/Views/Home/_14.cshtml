
@using _57_Exercises.Controllers

@model _57_Exercises.ViewModels.Ex14ViewModel

@{
    ViewBag.Title = "14";
}

@using (Ajax.BeginForm(actionName: nameof(HomeController._14), ajaxOptions: new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "result", InsertionMode = InsertionMode.Replace }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.State, "State? ")
        @Html.EditorFor(m => m.State, new { htmlAttributes = new { @class = "form-control", autofocus = "", required = "required" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Amount, "Amount? ")
        @Html.EditorFor(m => m.Amount, new { htmlAttributes = new { @class = "form-control", required = "required" } })
    </div>
    <button type="submit" id="btnSubmit" class="btn btn-default">Ok</button>
}

<p>
    <div id="result"></div>
    <h2 class="text-primary text-warning" id="error"></h2>
</p>