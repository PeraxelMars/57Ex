@using _57_Exercises.Controllers

@model _57_Exercises.ViewModels.Ex24ViewModel

@{
    ViewBag.Title = "24";
}

@using (Ajax.BeginForm(actionName: nameof(Chapter5Controller._24), ajaxOptions: new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "result", InsertionMode = InsertionMode.Replace }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.S1)
                @Html.EditorFor(model => model.S1, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.S2)
                @Html.EditorFor(model => model.S2, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group pull-right">
                <input type="submit" value="Ok" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<p>
    <div id="result"></div>
    <h2 class="text-primary text-warning" id="error"></h2>
</p>
